{
    "name": "rms/rms-extlocate-extend",
    "type": "typo3-cms-extension",
    "description": "Extend the locate extension",
    "version": "12.0.0",
    "keywords": [
        "TYPO3",
        "locate"
    ],
    "homepage": "https://github.com/rmsstuttgart/rms_extlocate_extend",
    "authors": [
        {
            "name": "mk@rms",
            "role": "Developer"
        }
    ],
    "license": "GPL-2.0-or-later",
    "require": {
        "typo3/cms-core": "^11 || ^12",
        "leuchtfeuer/locate": "*",
        "php": ">=8.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-strict-rules": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "squizlabs/php_codesniffer": "^3.7",
        "cakephp/cakephp-codesniffer": "^5.0",
        "ssch/typo3-rector": "^2.5"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "rms_extlocate_extend"
        }
    },
    "autoload": {
        "psr-4": {
            "Rms\\RmsExtlocateExtend\\": "Classes"
        }
    },
    "replace": {
        "typo3-ter/rms-extlocate-extend": "self.version"
    },
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}